<div class="card mb-3">
  <h2 class="card-header h4">
    Activity #<%= activity.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Date</dt>
      <dd><%= activity.date %></dd>

      <dt>Name</dt>
      <dd><%= activity.name %></dd>

      <dt>Category</dt>
      <dd>
        <% if @activity.category.present? %>
          <%= link_to activity.category, activity.category %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @activity.user.present? %>
          <%= link_to activity.user, activity.user %>
        <% end %>
      </dd>

      <dt>Description</dt>
      <dd><%= activity.description %></dd>

      <dt>Footprint level</dt>
      <dd>
        <% if @activity.impact_level.present? %>
          <%= link_to activity.impact_level, activity.impact_level %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back activity, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @activity.user %>
          <%= link_to edit_activity_url(activity), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @activity.user %>
          <%= link_to activity, method: :delete, data: { confirm: "Do you really want to delete this activity?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(activity.updated_at) %> ago
  </div>
</div>
