<%= search_form_for @q, :class => collapse_search_form, :id => "footprint_tallies_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :footprint_level_number, "Footprint level number" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :footprint_level_number_gteq, :class => "form-control", :placeholder => "Footprint level number greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :footprint_level_number_lteq, :class => "form-control", :placeholder => "Footprint level number less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :footprint_level_word_cont, "Footprint level word contains" %>
    <%= f.text_field :footprint_level_word_cont, :class => "form-control", :placeholder => "Footprint level word contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :date, "Activity Date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='actionsgteqdatePicker' data-target-input="nearest">
          <%= f.text_field :actions_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Activity Date greater than or equal to", :data => {:target => '#actionsgteqdatePicker'} %>
          <div class="input-group-append" data-target='#actionsgteqdatePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='actionslteqdatePicker' data-target-input="nearest">
          <%= f.text_field :actions_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Activity Date less than or equal to", :data => {:target => '#actionslteqdatePicker'} %>
          <div class="input-group-append" data-target='#actionslteqdatePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#actionsgteqdatePicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#actionslteqdatePicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#actionsgteqdatePicker').on("dp.change", function (e) {
              $('#actionslteqdatePicker').data("DateTimePicker").minDate(e.date);
          });
          $('#actionslteqdatePicker').on("dp.change", function (e) {
              $('#actionsgteqdatePicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :users_email_cont, "Users email contains" %>
    <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "Users email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/footprint_tallies" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#footprint_tallies_filters">
  Show filters
</a>
