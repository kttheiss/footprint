<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activity Logs

    <a data-toggle="collapse" href="#user_activity_logs_new_form">
      Add activity log
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.activity_logs.each do |activity_log| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to activity_log, activity_log %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_activity_logs_new_form">
        <%= render partial: "users/user_activity_logs_new_form" %>
      </div>
    </div>

  </ul>
</div>
